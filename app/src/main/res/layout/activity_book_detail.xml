<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".BookDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/colorMainLight"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/id_detail_book_thumbnail"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/id_detail_book_title"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_detail_book_author"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/id_detail_book_year"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/id_detail_book_category"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/id_detail_book_pages"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/id_detail_book_description"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/id_detail_book_button"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorMainDark"
                android:layout_height="wrap_content"
                android:text="@string/open_book"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
